  {{#if ordered}}
  <script>
    Swal.fire({
      icon: "success",
      title: "order placed",
      showConfirmButton: false,
      timer: 1500
    });
  </script>
  {{/if}}

  <div class="container mt-5">

    <div class="container-xl px-4 mt-4">

      <hr class="mt-0 mb-4">
      <div class="row">
        <div class="col-xl-4">

          <div class="card mb-4 mb-xl-0">
            <div class="card-body text-center">

              <img class="img-account-profile rounded-circle me-3 mb-2" style="height: 5rem;" src="/img/person.png"
                alt="profile">

              <span class="text-dark  mt-3"
                style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 20px;">Hello,
              </span><span style="font-weight: light; font-family: Arial, Helvetica, sans-serif; font-size: 16px;"
                class="font-italic text-muted ">{{user.userName}}</span>
              <br>
            </div>
          </div>


          <a href="/user_data">
            <div class="card mb-4 mb-xl-0">
              <div class="card-body text-center">

                <img class="img-account-profile rounded-circle me-3 mb-2 float-start" src="/img/person1.png"
                  alt="person">

                <span class="text-dark float-start mt-3"
                  style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 16px;">PERSONAL
                  INFO</span>
                <br>
              </div>
            </div>
          </a>


          <a href="/myOrders">
            <div class="card mb-4 mb-xl-0">
              <div class="card-body text-center">

                <img class="img-account-profile rounded-circle me-3 mb-2 float-start" src="/img/order.png" alt="order">

                <span class="text-dark float-start mt-3"
                  style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 16px;">MY
                  ORDERS</span>
                <br>
              </div>
            </div>
          </a>


          <a href="/wish">
            <div class="card mb-4 mb-xl-0">
              <div class="card-body text-center">

                <img class="img-account-profile rounded-circle float-start me-3 mb-2" src="/img/wish.png" alt="wish">

                <span class="text-dark float-start mb-4"
                  style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 16px;">MY
                  WISHLIST</span>
                <br>
              </div>
            </div>
          </a>


          <a href="/myAddresses">
            <div class="card mb-4 mb-xl-0">
              <div class="card-body text-center">

                <img class="img-account-profile rounded-circle float-start me-3 mb-2" src="/img/address.png"
                  alt="address">

                <span class="text-dark float-start mt-3"
                  style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 16px;">MY
                  ADDRESS</span>
                <br>
              </div>
            </div>
          </a>


          <a href="/logout">
            <div class="card mb-4 mb-xl-0">
              <div class="card-body text-center">

                <img class="img-account-profile rounded-circle float-start me-3 mb-2" src="/img/logout.png"
                  alt="logout">

                <span class="text-dark float-start  mt-3"
                  style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 16px;">LOG OUT</span>
                <br>
              </div>
            </div>
          </a>

          <div class="card mb-4 mb-xl-0">
            <div class="card-body text-center">

              <img class="img-account-profile rounded-circle float-start me-3 mb-2" src="/img/delete.png" alt="DELETE">

              <span class="text-dark  mt-3 float-start"
                style="font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 16px;">DELETE
                ACCOUNT</span>
              <br>
            </div>
          </div>

        </div>
        <div class="col-xl-8">

          <div class="card mb-4">
            <div class="text-center">
                        {{#each myAddress}}
                        <div class="row">
                            <div class="bg-white card addresses-item shadow-sm">
                                <div class="gold-members p-4">
                                    <div class="media">
                                        <div class="mr-3"><i class="icofont-location-pin icofont-3x"></i></div>
                                        <div class="media-body">
                                            <h6 class="mb-1">{{this.firstName}}</h6>
                                            <p>{{this.address}}, {{this.address2}}, {{this.state}} {{this.pin}},
                                                {{this.country}}
                                            </p>
                                            <p class="mb-0 text-black font-weight-bold">
                                                <a class="text-primary m-3" href="/"
                                                    onclick="fillAddressFields('{{this.firstName}}', '{{this.lastName}}', '{{this.email}}', '{{this.phone}}', '{{this.address}}', '{{this.address2}}', '{{this.country}}', '{{this.state}}', '{{this.pin}}','{{this._id}}')">EDIT</a>
                                                <a class="deleteAddressFromUser text-danger" data-id="{{this._id}}"
                                                    style="cursor: pointer;"> DELETE</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <form name="checkForm" onsubmit="return checkValidation()" action="/myAddresses" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input type="text" class="form-control" name="grandTotal" value="{{grandTotal}}" hidden>
                                <label for="firstName">First name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName">
                                <p id="fNameAknwoledgment" style="color: red; display: none;">Fill valid first name!!!
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Last name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName">
                                <p id="lNameAknwoledgment" style="color: red; display: none;">Fill valid last name!!!
                                </p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email"
                                placeholder="you@example.com">
                            <p id="emailAknwoledgment" style="color: red; display: none;">Fill valid email address!!!
                            </p>
                        </div>
                        <div class="mb-3">
                            <label for="phone">Conatact number</label>
                            <input type="text" class="form-control" id="phone" name="phone" placeholder="+91xxxxxxxxxx">
                            <p id="phoneAknwoledgment" style="color: red; display: none;">Fill valid phone number!!!
                            </p>
                        </div>
                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="1234 Main St"
                                name="address">
                            <p id="adrressAknwoledgment" style="color: red; display: none;">Fill valid shipping
                                address!!!</p>
                        </div>

                        <div class="mb-3">
                            <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
                            <input type="text" class="form-control" id="address2" name="address2"
                                placeholder="Apartment or suite">
                        </div>

                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label for="country">Country</label>
                                <select class="custom-select d-block w-100" id="country" name="country">
                                    <option value="">Choose...</option>
                                    <option>India</option>
                                </select>
                                <p id="countryAknwoledgment" style="color: red; display: none;">Select valid country!!!
                                </p>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state">State</label>
                                <select class="custom-select d-block w-100" id="state" name="state">
                                    <option value="">Choose...</option>
                                    <option>Kerala</option>
                                </select>
                                <p id="stateAknwoledgment" style="color: red; display: none;">Select valid state!!!</p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="pin">pin code</label>
                                <input type="text" class="form-control" id="pin" name="pin">
                                <p id="pinAknwoledgment" style="color: red; display: none;">Enter valid pin number!!!
                                </p>
                            </div>
                            <input type="text" id="id" name="id" hidden>
                        </div>
                        <hr class="mb-4">
                        <button class="btn btn-dark w-100  btn-block" type="submit">Submit</button>
                    </form>
          </div>
        </div>
      </div>
    </div>
                <div class="modal fade" id="addressDeleteShow" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog  modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="userTitle"></h5>
                            <a class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
                        </div>
                        <div class="modal-body" id="addressDetails">
                            ...
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-dark text-light" data-bs-dismiss="modal">Close</a>
                        </div>
                    </div>
                </div>
            </div>
    <script src="/js/validation.js"></script>
    <script src="/js/checkOutMgt.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
  </div>



</body>

</html>