            <div class="card">
            <div class="card-header">User orders</div>
            <div class="card-body ">

              {{#each orders}}

              <div class="card shadow-0 border ">
                <div class="card-body">
                  <div class="row">
                   
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-dark mb-0">{{this.name}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-dark mb-0 small">{{this.orderData.totalAmount}}</p>
                    </div>

                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-dark mb-0 small">{{this.orderData.orderedDate}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-dark mb-0 small"> {{this.orderData.deliveryDate}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                     <p class="text-dark mb-0 small"> {{this.orderData.orderStatus}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <a class="btn btn-dark" href="/admin/orders/{{this.orderData._id}}">show</a>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
