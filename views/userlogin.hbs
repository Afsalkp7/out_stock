<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/logStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://use.fontawesome.com/f59bcd8580.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</head>

<body>
    {{#if blocked}}
    <script>
        Toastify({
              text: "Your account was blocked by admin...",
              duration: 1000,
              destination: "https://github.com/apvarun/toastify-js",
              newWindow: true,
              close: true,
              gravity: "top", 
              position: "center", 
              stopOnFocus: true, 
              style: {
                background: "black",
              },
              
            }).showToast();
        
    </script>
    {{/if}}
    <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm p-4 ">
            <div class="container-fluid">
                <a href="#" class="navbar-brand"><img class="img-fluid" src="/img/logo.jpg" width="200px"
                        alt="logo"></a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-5">
                        <a href="/" class="nav-item nav-link  ms-5"
                            style="font-family: Arial, Helvetica, sans-serif;font-weight: bolder;">Home</a>
                        <a href="#" class="nav-item nav-link  ms-5"
                            style="font-family: Arial, Helvetica, sans-serif;font-weight: bolder;">Shop</a>
                        <a href="#" class="nav-item nav-link  ms-5"
                            style="font-family: Arial, Helvetica, sans-serif;font-weight: bolder;">About</a>
                        <a href="#" class="nav-item nav-link  ms-5"
                            style="font-family: Arial, Helvetica, sans-serif;font-weight: bolder;">Contact</a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav ms-auto me-3">
                            <a id="userIcons" href="/wish"><img src="/img/wishlist.png" alt="wishlist" width="30px"></a>
                        </div>
                        <div class="navbar-nav me-3">
                            <a id="userIcons" href="/cart"><img src="/img/cart.png" alt="cart" width="30px"></a>
                        </div>
                        <div class="navbar-nav me-3">
                            <a href="/user"><img src="/img/person1.png" alt="admin" width="40px"></a>
                        </div>
                    </div>
                </div>

            </div>
        </nav>
    </div>

    <div class="container">


        <div class="row mt-5 m-2 no-gutters shadow-lg">
            <div class="col-md-6 d-none d-md-block">
                <img src="/img/loginImage.jpg" class="img-fluid" style="min-height: 100%" />
            </div>
            <div class="col-md-6 bg-white p-5 p-sm-1">
                {{#if valid}}
                    
                        <div class="alert alert-dark alert-dismissible fade show" role="alert">
                            <strong>Email or password is invalid </strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    
                    {{/if}}
                {{#if notExist}}
                    
                        <div class="alert alert-dark alert-dismissible fade show" role="alert">
                            <strong>User is not existed please register user first </strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    
                    {{/if}}
                    {{#if alert}}
                    
                        <div class="alert alert-dark alert-dismissible fade show" role="alert">
                            {{alert.msg}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    
                    {{/if}}
                <h3 class="pb-3">Login Form</h3>
                <div class="form-style">
                    
                    <form onsubmit="return loginValidation()" id="userLoginForm" name="userLoginForm" action="/user_login" method="POST">
                        <div class="form-group pb-3">
                            <input type="text" class="form-control" id="email" placeholder="Enter email" name="email"
                                id="exampleInputEmail1" aria-describedby="emailHelp" />
                            <p id="emailAlert" class="text-danger"></p>
                        </div>
                        <div class="form-group pb-3">
                            <input type="password" class="form-control" id="pwd" placeholder="Enter password"
                                name="password" id="exampleInputPassword1" />
                            <p id="passAlert" class="text-danger"></p>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">

                            <div><a href="/forgot">Forget Password?</a></div>
                        </div>
                        <div class="pb-2">
                            <button type="submit" class="btn btn-dark w-100 font-weight-bold mt-2">
                                Submit
                            </button>
                        </div>
                    </form>
                    <div class="sideline">OR</div>
                    <div>
                        <a href="/auth/google">
                            <button type="submit" class="btn btn-primary w-100 font-weight-bold mt-2">
                                <i class="fa fa-google" aria-hidden="true"></i> Login With
                                Google
                            </button>
                        </a>
                    </div>
                    <div class="pt-4 text-center">
                        Get Members Benefit. <a href="/registration">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <script src="/js/validation.js"></script>

</body>

</html>