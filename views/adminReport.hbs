       <script>
        const years = [{{fiveYears}}];
        const amounts = [{{fiveYearAmounts}}];
        const picolors = [
            "#000000",
            "#333333",
            "#666666",
            "#999999",
            "#cccccc",
        ];

        new Chart("myChartPI", {
            type: "pie",
            data: {
                labels: years,
                datasets: [{
                    backgroundColor: picolors,
                    data: amounts
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "sales on last 5 years"
                }
            }
        });
    </script>


    <script>


        var xyValues = {{{ monthOrdersAmount }}};

        new Chart("mygraph", {
            type: "scatter",
            data: {
                datasets: [{
                    pointRadius: 4,
                    pointBackgroundColor: "black",
                    data: xyValues
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    xAxes: [{ ticks: { min: 0, max: 100000 } }],
                    yAxes: [{ ticks: { min: 1, max: 31 } }],
                }
            }
        });
    </script>

    <script>

        const xValues = ["DAY1", "DAY2", "DAY3", "DAY4", "DAY5", "DAY6", "DAY7"];
        const yValues = [{{ weekOrdersAmount }}];
        const barColors = ["black", "gray", "black", "gray", "black", "gray", "black"];

        new Chart("myChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true
                }
            }
        });
    </script>
    <script>
        const YearOrdersAmount = [{{ YearOrdersAmount }}]
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            // Set Data
            const data = google.visualization.arrayToDataTable([
                ['Months', 'Mhl'],
                ['jan', YearOrdersAmount[0]],
                ['feb', YearOrdersAmount[1]],
                ['mar', YearOrdersAmount[2]],
                ['apr', YearOrdersAmount[3]],
                ['may', YearOrdersAmount[4]],
                ['jun', YearOrdersAmount[5]],
                ['jul', YearOrdersAmount[6]],
                ['aug', YearOrdersAmount[7]],
                ['sep', YearOrdersAmount[8]],
                ['oct', YearOrdersAmount[9]],
                ['nov', YearOrdersAmount[10]],
                ['dec', YearOrdersAmount[11]],
            ]);

            // Set Options
            const options = {
                title: 'Last year sales',
                is3D: true
            };

            // Draw
            const chart = new google.visualization.PieChart(document.getElementById('myPIChart'));
            chart.draw(data, options);

        }
    </script>

 





